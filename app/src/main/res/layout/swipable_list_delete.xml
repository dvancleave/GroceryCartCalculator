<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/swipeableLayout"
        android:layout_alignBottom="@id/swipeableLayout">

        <Button
            android:id="@+id/list_Item_Delete"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/deleteBackground"
            android:text="DELETE"
            android:textColor="@color/deleteText" />

    </RelativeLayout>
    <team2.grocerycartcalculator.SwipeableLayout
        android:id="@+id/swipeableListLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/activityBackground">

        <TextView
            android:id="@+id/item_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Item"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/quantity_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:inputType=""
            app:layout_constraintEnd_toStartOf="@+id/units_text"
            tools:layout_editor_absoluteY="8dp" />

        <Spinner
            android:id="@+id/units_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price_text"
            android:layout_width="23dp"
            android:layout_height="34dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="189dp" />

    </team2.grocerycartcalculator.SwipeableLayout>



</RelativeLayout>